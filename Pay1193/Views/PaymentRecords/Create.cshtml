@model PaymentRecordsCreateViewModel
@{
    ViewBag.Title = "Payment Records";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="PaymentRecords" asp-action="Index">Payrecord list</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">New Payrecord</li>
                </ol>
            </nav><br />

            <h1>@ViewBag.Title</h1>
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="form-group col-md-11">
                        <select asp-for="FullName" class="w-100 form-control">
                            <option selected style="display:none">--- Select Employee ---</option>
                            @foreach (var emp in ViewBag.ListEmployee)
                            {
                                <option value="@emp.FullName">@emp.FullName</option>
                               
                            }
                            
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">

                        <select asp-for="PayMonth" class="form-control" asp-items="Html.GetEnumSelectList<Month>()">
                        <option selected style="display:none">--- Select Month ---</option>
                           </select>
                        
                    </div>

                    <div class="form-group col-md-1">
                    <label asp-for="TaxYearId"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select class="w-100 form-control"  asp-for="TaxYearId">
                            <option selected style="display:none">--- Select Tax Year ---</option>
                            @foreach (var tax in ViewBag.TaxYear)
                            {
                                <option value="@tax.Id">@tax.YearOfTax</option>
                            }
                        </select>
                    </div>


                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="date" class="form-control" asp-for="PayDate" />
                        <span asp-validation-for="PayDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="HourlyRate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" placeholder="Ex: 100" class="form-control" asp-for="HourlyRate" />
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="HoursWorked"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" placeholder="Ex: 100" class="form-control" asp-for="HoursWorked" />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="ContractualHours"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="text" placeholder="Ex: 100" class="form-control" asp-for="ContractualHours" />
                        <span asp-validation-for="ContractualHours" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-secondary btn-rounded float-left" style="margin-right:auto.7em"><i class="fa fa-calculator mr-2"></i>Compute &amp; Save </button>
                    <a asp-controller="PaymentRecords" asp-action="Index" class="btn btn-primary btn-rounded float-right" style="margin-right:auto.7em"><i class="fa fa-caret-left mr-2"></i>Back to Pay List</a>
                    <br />
                    <br />
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_validationScriptsPartial");
    }
}